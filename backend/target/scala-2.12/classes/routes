# Routes
# This file defines all application routes (Higher priority routes first)
# ~~~~

# An example controller showing a sample home page
GET     /                           controllers.HomeController.index
# An example controller showing how to use dependency injection
GET     /count                      controllers.CountController.count
# An example controller showing how to write asynchronous code
GET     /message                    controllers.AsyncController.message

GET     /users                      controllers.UserController.index()
GET     /users/create               controllers.UserController.create()
GET     /users/:id                  controllers.UserController.show(id: String)
GET     /users/edit/:id             controllers.UserController.edit(id: String)
POST    /users/edit                 controllers.UserController.update()
POST    /users/create               controllers.UserController.save()
GET     /users/delete/:id           controllers.UserController.destroy(id: String)
GET     /users/login/               controllers.UserController.login()
POST    /users/login/                controllers.UserController.authenticate()
# Map static resources from the /public folder to the /assets URL path
GET     /assets/*file               controllers.Assets.versioned(path="/public", file)
